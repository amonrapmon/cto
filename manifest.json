{
  "manifest_version": 3,
  "name": "UNO RANDOM – Генератор текста",
  "version": "1.0.0",
  "description": "Генератор и рандомизатор текста с поддержкой шаблонов и эмодзи",
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "popup/icons/icon16.png",
      "32": "popup/icons/icon32.png",
      "48": "popup/icons/icon48.png",
      "128": "popup/icons/icon128.png"
    }
  },
  "permissions": [
    "clipboardWrite"
  ],
  "icons": {
    "16": "popup/icons/icon16.png",
    "32": "popup/icons/icon32.png",
    "48": "popup/icons/icon48.png",
    "128": "popup/icons/icon128.png"
  }
}
